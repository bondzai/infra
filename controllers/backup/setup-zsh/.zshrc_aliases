# ~/.zshrc_aliases

# Alias configuration
alias work-git-clone='bash ~/Desktop/code/tools/git-clone/main.sh'
alias gomake='curl -sL https://raw.githubusercontent.com/introbond/go-ez-toolbox/master/Makefile -o Makefile'

# ls aliases
alias l='ls -lh'
alias ll='ls -lah'
alias la='ls -A'
alias lm='ls -m'
alias lr='ls -R'
alias lg='ls -l --group-directories-first'

# git aliases
alias gcl='git clone --depth 1'
alias gi='git init'
alias ga='git add'
alias gc='git commit -m'
alias gp='git push origin master'
