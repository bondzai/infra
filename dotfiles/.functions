#!/bin/bash

# Create a directory and navigate into it
mkcd() {
    mkdir -p "$1" && cd "$1" || return
}

# List all files (including hidden) in long format
ll() {
    ls -alh "$@"
}

# Extract common archive formats
extract() {
    if [ -f "$1" ]; then
        case "$1" in
        *.tar.bz2) tar xjf "$1" ;;
        *.tar.gz) tar xzf "$1" ;;
        *.bz2) bunzip2 "$1" ;;
        *.rar) unrar x "$1" ;;
        *.gz) gunzip "$1" ;;
        *.tar) tar xf "$1" ;;
        *.tbz2) tar xjf "$1" ;;
        *.tgz) tar xzf "$1" ;;
        *.zip) unzip "$1" ;;
        *.Z) uncompress "$1" ;;
        *.7z) 7z x "$1" ;;
        *) echo "Unknown archive format: $1" ;;
        esac
    else
        echo "Usage: extract <file>"
    fi
}

# Simple HTTP server (Python 3)
serve() {
    local port="${1:-8000}"
    python3 -m http.server "$port"
}

# Git log with a graph
gitlog() {
    git log --graph --oneline --all
}

# Reload the shell configuration
reload() {
    source ~/.bashrc # or .zshrc, depending on your shell
}

# Example usage: repeat "Hello" 3
repeat() {
    local str="$1"
    local count="$2"
    printf "%s\n" $(printf "$str\n%.0s" $(seq "$count"))
}

mgitclone() {
    source .env

    read -p "Enter the repository name: " repo_name

    clone_command="git clone https://$USERNAME:$PAT@github.com/swift-dynamics/$repo_name.git"

    $clone_command
}
